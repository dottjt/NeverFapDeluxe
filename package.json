{
  "name": "deluxe-web",
  "version": "1.0.0",
  "description": "NeverFap Deluxe API",
  "main": "index.js",
  "scripts": {
    "start": "hugo server -DF",
    "cp_kickstarter": "cp ./content/email_seven_day_kickstarter/* ./themes/deluxe_theme/static/md/seven_day_kickstarter/*",
    "cp_primer": "cp ./content/email_ten_day_primer/* ./themes/deluxe_theme/static/md/ten_day_primer/*",
    "cp_challenge": "cp ./content/email_twenty_eight_day_challenge/* ./themes/deluxe_theme/static/md/twenty_eight_day_challenge/*",

    "bible": "npm run bible-md && npm run bible-pub",
    "bible-md": "node ./util/generateBible.js",
    "bible-pub": "pandoc ./ebook/bible/bible.md --metadata-file ./ebook/bible/bible-metadata.yaml -o ./ebook/bible/bible.epub -f markdown -t epub",

    "kickstarter": "npm run kickstarter-md && npm run kickstarter-pub",
    "kickstarter-md": "node ./util/generateKickstarter.js",
    "kickstarter-pub": "pandoc ./ebook/kickstarter/kickstarter.md --metadata-file ./ebook/kickstarter/kickstarter-metadata.yaml -o ./ebook/kickstarter/kickstarter.epub -f markdown -t epub",

    "primer": "npm run primer-md && npm run primer-pub",
    "primer-md": "node ./util/generatePrimer.js",
    "primer-pub": "pandoc ./ebook/primer/primer.md --metadata-file ./ebook/primer/primer-metadata.yaml -o ./ebook/primer/primer.epub -f markdown -t epub",

    "challenge": "npm run challenge-md && npm run challenge-pub",
    "challenge-md": "node ./util/generateChallenge.js",
    "challenge-pub": "pandoc ./ebook/challenge/challenge.md --metadata-file ./ebook/challenge/challenge-metadata.yaml -o ./ebook/challenge/challenge.epub -f markdown -t epub",

    "generate-quotes": "node ./util/transformQuoteToMD.js",
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dottjt/nfd-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dottjt/nfd-api/issues"
  },
  "homepage": "https://github.com/dottjt/nfd-api#readme",
  "dependencies": {
    "better-md-2-json": "^1.0.6",
    "fs-extra": "^8.0.1",
    "uuid": "^3.3.2"
  }
}
