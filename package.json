{
  "name": "deluxe-web",
  "version": "1.0.0",
  "description": "NeverFap Deluxe",
  "main": "index.js",
  "scripts": {
    "kickstarter": "npm run kickstarter-md && npm run kickstarter-pub",
    "kickstarter-md": "node ./util/generateKickstarter.js",
    "kickstarter-pub": "pandoc ./ebook/kickstarter.md --metadata-file ./ebook/kickstarter-metadata.yaml -o ./ebook/kickstarter.epub -f markdown -t epub",

    "bible": "npm run bible-md && npm run bible-pub",
    "bible-md": "node ./util/generateBible.js",
    "bible-pub": "pandoc ./ebook/bible.md --metadata-file ./ebook/bible-metadata.yaml -o ./ebook/bible.epub -f markdown -t epub",

    "generate-quotes": "node ./util/transformQuoteToMD.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dottjt/nfd-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dottjt/nfd-api/issues"
  },
  "homepage": "https://github.com/dottjt/nfd-api#readme",
  "dependencies": {
    "better-md-2-json": "^1.0.6",
    "fs-extra": "^8.0.1",
    "uuid": "^3.3.2"
  }
}
